.search-container {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #05BE11; /*42BD56*/
  color: #FFF;
  height: 80rpx;
  padding: 10rpx 20rpx;
  z-index: 100;
}
.search-container input {
  font-family: Microsoft YaHei;
  font-size:35rpx;
  background: #FFF;
  color: #AAA;
  padding: 5px 10rpx;
  height: 40rpx;
  width: 85%;
  border-radius: 10rpx;
}
.search-container icon {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -20rpx;
  right: 40rpx;
}

