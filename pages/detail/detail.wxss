page {
    background: #FFFFFF;
}
.cover-container {
    background: #FFFFFF;/*05BE11*/
    text-align: center;
    padding: 50rpx 0;
}
.cover-container image {
    /*display: inline-block;
    width: 300rpx;
    height: 400rpx;*/
    display: inline-block;
    width: 225rpx;
    height: 300rpx;
    margin-top: 55rpx;
    box-shadow: 3px 3px 13px #CCC;
}

.book-meta {
    position: relative;
    padding: 30rpx;
    overflow: hidden;
}
.book-meta .range {
    position: absolute;
    top: 30rpx;
    right: 20rpx;
    width: 180rpx;
    margin-right: 10rpx;
    background: #FFF;
    /*padding: 20rpx 10rpx;*/
    text-align: center;
    box-shadow: 2px 2px 10px #CCC;
}
.book-meta .meta-info {
    margin-right: 200rpx;
}
.meta-info text {
    display: block
}
.book-title {
    /*font-weight: bold;*/
    font-size: 40rpx;
}
.other-meta {
    padding-top: 5rpx;
    color: #888;
    font-size: 23rpx;
}
.range text {
    display: block;
}
.range .score {
    font-size: 50rpx;
    font-weight: bold;
}
.range .starts {
    font-size: 40rpx;
}
.range .viewers {
    font-size: 30rpx;
}

.book-intro {
    margin-bottom: 40rpx;
    padding: 20rpx;
    background: #FFFFFF;
}
.book-intro .intro-header {
    color: #888;
    /*font-weight: bold;*/
    padding: 10rpx 0;
    font-size: 30rpx;
}
.book-intro .intro-content {
    font-size: 30rpx;
    line-height: 1;
    text-align: justify
}

/*star*/
.star-image{
  width: 30rpx;
  height: 30rpx;
}

.line{
  height: 0.5rpx;
  width: 100%;
  background: #EDEDED;
}